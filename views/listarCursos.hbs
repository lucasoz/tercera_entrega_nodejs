{{>header}}


<div class="accordion" id="accordionExample">
    {{#each cursos}}
        <div class="card">
            <div class="card-header text-center" id="heading-{{this.id}}">
            <h2 class="mb-0">
                <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse-{{this.id}}" aria-expanded="false" aria-controls="collapseTwo">
                    <strong>Nombre: </strong> {{this.nombre}} <br>
                    <strong>Descripción: </strong> {{this.descripcion}} <br>
                    <strong>Valor: </strong> {{this.valor}} 
                </button>
            </h2>
            </div>
            <div id="collapse-{{this.id}}" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
            <div class="card-body">
                <strong>Descripción: </strong> {{this.descripcion}} <br>
                {{#if this.modalidad}}
                    <strong>Modalidad: </strong> {{this.modalidad}} <br>
                {{/if}}
                {{#if this.intensidad}}
                    <strong>Intensidad horaria: </strong> {{this.intensidad}} <br>
                {{/if}}
            </div>
            </div>
        </div>
    {{else}}
        <h2>No hay cursos disponibles</h2>
    {{/each}}
</div>



{{>footer}}